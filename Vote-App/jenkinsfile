pipeline {
    agent {
        label "jenkins-agent"
    }
    tools {
        dockerTool "docker-d"
        jdk "java17"
        git "git-d"
    }
    stages {
        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps {
                git branch: 'vcenter-features', credentialsId: 'github', url: 'https://github.com/Warlock-NTD/Vote-App.git'
            }
        }

        stage("Build Application") {
            steps {
                sh "cd Vote-App && docker compose build"
            }
        }

        stage("Test Application") {
            steps {
                sh "cd Vote-App && docker compose up -d"
            }
        }

        // stage("Terminate Application") {
        //     steps {
        //         sh "cd Vote-App && docker compose down"
        //     }
        // }

        stage("Sonarqube scan Application") {
            steps {
                withSonarQubeEnv(credentialsId: 'jenkins-sonarqube') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }

    post {
        always {
            echo "-=- remove deployment -=-"
            sh "cd Vote-App && docker compose down"
        }
    }
}