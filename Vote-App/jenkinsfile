pipeline {
    agent {
        label "jenkins-agent"
    }
    tools {
        dockerTool "docker-d"
        jdk "java17"
        git "git-d"
    }
    stages {
        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps {
                git branch: 'vcenter-features', credentialsId: 'github', url: 'https://github.com/Warlock-NTD/Vote-App.git'
            }
        }

        stage("Build Application") {
            steps {
                sh "cd Vote-App && docker compose build"
            }
        }

        stage("Test Application") {
            steps {
                sh "cd Vote-App && docker compose up -d"
            }
        }

        // stage("Terminate Application") {
        //     steps {
        //         sh "cd Vote-App && docker compose down"
        //     }
        // }

        stage("Sonarqube scan Application") {
            steps {
                withSonarQubeEnv(credentialsId: "jenkins-sonarqube", installationName: "sonarqube-scanner") {
                    // sh "sudo rm -rf Vote-App/Data/db"
                    sh "sudo sonar-scanner -X -Dsonar.projectKey=my_project_key -Dsonar.sources=. -Dsonar.login=admin -Dsonar.password=duy03081998"
                }
            }
        }
    }

    post {
        always {
            echo "-=- remove deployment -=-"
            sh "cd Vote-App && docker compose down"
        }
    }
}